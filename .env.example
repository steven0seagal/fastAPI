# App
APP_NAME="Diagnostics Lab API"
APP_ENV=dev
DEBUG=1

# Security
SECRET_KEY="dev-secret-change-me"
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database
DATABASE_URL="postgresql+psycopg://postgres:postgres@postgres:5432/diagnostics_lab"
DB_WAIT_TIMEOUT_SECONDS=30

# Redis / Celery
REDIS_URL="redis://redis:6379/0"
CELERY_BROKER_URL="redis://redis:6379/0"
CELERY_RESULT_BACKEND="redis://redis:6379/1"
CELERY_ALWAYS_EAGER=0

# Bootstrap data (used by `python -m diagnostics_lab.seed`)
DEFAULT_ADMIN_EMAIL="admin@lab.local"
DEFAULT_ADMIN_PASSWORD="admin123"
